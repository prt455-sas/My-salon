@model MySalon_Master.Models.Appointment

@{
    ViewData["Title"] = "Create";
}
<header class="py-5 full-appointment-background">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group booking-fields-color">
                        <label asp-for="BookedDate" class="control-label"></label>
                        <input asp-for="BookedDate" type="date" class="form-control" placeholder="Select Date"/>
                        <span asp-validation-for="BookedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group booking-fields-color">
                        <label asp-for="BookTime" class="control-label"></label>
                        @*<input asp-for="Booked Time" type="time" class="form-control" placeholder="Select Time"/>*@
                        <span asp-validation-for="BookTime" class="text-danger"></span>
                        <br/>
                        <div class="form-control">
                       @Html.DropDownListFor(m=>m.TimeRangeID,new SelectList(ViewBag.TimeRangeList,"Id","Range"),"Select Time")
                        </div> 
                       </div>
                    <div class="form-group booking-fields-color">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" readonly value="@ViewBag.email"/>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                        <input type="submit" value="Create Appointment" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</header>
@model MySalon_Master.Models.Appointment

@{
    ViewData["Title"] = "Pending";
}
    <div class="container mt-4">
        <h1>Pending</h1>
        <h4>Please waiting for the management</h4>
        <h4>Appointment</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Pending">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="BookedDate" class="control-label"></label>
                        <input asp-for="BookedDate" class="form-control" />
                        <span asp-validation-for="BookedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BookedTime" class="control-label"></label>
                        <input asp-for="BookedTime" class="form-control" />
                        <span asp-validation-for="BookedTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Pending" class="btn btn-primary" /> |
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}